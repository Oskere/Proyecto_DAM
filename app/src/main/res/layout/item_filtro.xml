<!-- item_filtro.xml -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <TextView
        android:id="@+id/TextViewFiltro1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="180dp"
        android:layout_toEndOf="@id/lottieAnimationView"
        android:text="aaaaaaaaaaa"
        android:textColor="@color/texto"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TextViewFiltro2"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/TextViewFiltro1"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="88dp"
        android:layout_toEndOf="@id/lottieAnimationView"
        android:text="aaaaaaaaaaaa"
        android:textColor="@color/texto"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView"
        android:layout_width="75dp"
        android:layout_height="78dp"
        android:layout_marginEnd="301dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="false"
        app:lottie_fileName="fav_animation.json"
        app:lottie_loop="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>
